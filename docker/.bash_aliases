# Git
alias g="git"
alias gi="git init"
alias ga="git add"
alias gc="git commit"
alias gs="git status"
alias gl="git log"
alias nah="git reset --soft HEAD~"
alias oops="git commit --amend"

# Clearing the screen
alias c="clear"
alias cls="clear"
alias claer="clear"
alias ccls='printf "\033c"'

# Changing common directories
alias ..="cd ../"
alias ...="cd ../../"
alias ls="ls -A --color=auto"
alias home="cd ~/"

# Lazy: shorter aliases to common commands
alias art="php artisan"
alias artisan="php artisan"
alias nr="npm run"
alias y="yarn"
alias p="./vendor/bin/phpunit "
alias pf="./vendor/bin/phpunit --filter "
